.index {
  width: 600rpx;
  margin: 100rpx calc((100% - 600rpx) / 2);
  border: 2rpx solid #ffcccc;
  border-radius: 50%;
  height: 600rpx;
  position: relative;
  overflow: hidden;
  font-size: 52rpx;
  text-align: center;
}
.xian {
  width: 600rpx;
  height: 2rpx;
  background: #d6d6d6;
  position: absolute;
  top: 300rpx;
  left: 0;
}
.index > .xian:nth-child(2) {
  transform: rotateZ(60deg);
}
.index > .xian:nth-child(3) {
  transform: rotateZ(120deg);
}
.detail {
  position: absolute;
}
.index > .detail:nth-child(4) {
  top: 50rpx;
  left: 250rpx;
}
.index > .detail:nth-child(5) {
  top: 180rpx;
  left: 400rpx;
}
.index > .detail:nth-child(6) {
  top: 380rpx;
  left: 400rpx;
}
.index > .detail:nth-child(7) {
  top: 480rpx;
  left: 250rpx;
}
.index > .detail:nth-child(8) {
  top: 380rpx;
  left: 80rpx;
}
.index > .detail:nth-child(9) {
  top: 180rpx;
  left: 80rpx;
}
.index > span {
  width: 52rpx;
  line-height: 38rpx;
  text-align: center;
  background-color: #ffcccc;
  border-radius: 50%;
  position: absolute;
  left: 277rpx;
  top: 262rpx;
  font-size: 28rpx;
}
.index > span::after {
  content: ' ';
  width: 0;
  height: 0;
  border-right: 12rpx solid transparent;
  border-left: 12rpx solid transparent;
  border-bottom: 52rpx solid #ffcccc;
  z-index: 10;
  position: absolute;
  left: 14rpx;
  top: -48rpx;
}
.radiogroup {
  display: flex;
  justify-content: space-around;
  align-items: center;
}
image {
  position: absolute;
  width: 100%;
  height: 100vh;
  z-index: -1;
}
